# Environment Variables for Render Deployment
# Copy these to your Render dashboard Environment Variables section

# Basic Configuration
NODE_ENV=production
PORT=10000

# Database (Render PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Security Keys (CHANGE THESE!)
JWT_SECRET=your-super-secure-jwt-secret-change-this-now
BCRYPT_ROUNDS=12

# Government API Keys (Get from respective websites)
CONGRESS_API_KEY=your-congress-api-key
OPENSECRETS_API_KEY=your-opensecrets-api-key  
PROPUBLICA_API_KEY=your-propublica-api-key
USASPENDING_API_KEY=not-required

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
AUTH_RATE_LIMIT_MAX=3

# CORS (Your Render URL)
CORS_ORIGIN=https://your-app-name.onrender.com

# Performance
ENABLE_COMPRESSION=true
CACHE_TTL=3600

# Logging
LOG_LEVEL=info