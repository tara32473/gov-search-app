# Government Watchdog API Environment Configuration
NODE_ENV=development
PORT=4000

# Security Configuration
JWT_SECRET=gov-watchdog-2025-secure-jwt-key-$(openssl rand -hex 32)

# Database Configuration  
DB_PATH=./watchdog.sqlite

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Security Headers
HELMET_CSP_ENABLED=true
CORS_ORIGIN=http://localhost:4000

# Logging
LOG_LEVEL=info