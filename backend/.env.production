# Production Environment Configuration
NODE_ENV=production
PORT=4000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/gov_watchdog_prod
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_SSL=true

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# API Keys for Real Data Sources
CONGRESS_API_KEY=your-congress-gov-api-key
OPENSECRETS_API_KEY=your-opensecrets-api-key
USASPENDING_API_KEY=your-usaspending-gov-api-key
PROPUBLICA_API_KEY=your-propublica-congress-api-key

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
AUTH_RATE_LIMIT_MAX=3

# CORS Configuration
CORS_ORIGIN=https://yourdomainname.com
CORS_CREDENTIALS=true

# SSL/HTTPS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Performance Configuration
ENABLE_COMPRESSION=true
CACHE_TTL=3600
ENABLE_ETAG=true

# Email Configuration (for alerts and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id